ALTER TRIGGER [dbo].[IMLTSONALIS] ON [dbo].[F0101D0004TBLSTOKHAREKETLERI]
AFTER INSERT
AS
BEGIN
SET NOCOUNT ON
DECLARE @STKIND INT
DECLARE @GIREN FLOAT
IF EXISTS(SELECT * FROM inserted WHERE IZAHAT=96)
BEGIN
SELECT @STKIND=STOKNO,@GIREN=GIREN FROM inserted 
IF @GIREN>0
BEGIN
UPDATE  F0101TBLSTOKLAR SET SONALISTARIHI=SYSDATETIME() WHERE IND=@STKIND;
END;
END;
END
